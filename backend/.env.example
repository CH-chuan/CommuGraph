# CommuGraph Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=False
APP_NAME="CommuGraph API"
APP_VERSION="0.1.0"

# CORS Origins (comma-separated)
# Add any ports your frontend runs on here
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/tmp/commugraph/uploads

# Session Configuration
SESSION_DIR=/tmp/commugraph/sessions
SESSION_EXPIRY_HOURS=24

# LLM API Keys (for Phase 3 - optional for now)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# Logging
LOG_LEVEL=INFO
